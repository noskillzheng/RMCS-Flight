// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "rmcs-develop",
	"image": "qzhhhi/rmcs-develop:latest",
	"privileged": true,
	"mounts": [
		{
			"source": "/dev",
			"target": "/dev",
			"type": "bind"
		},
		{
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix",
			"type": "bind"
		},
		{
			"source": "${localEnv:XAUTHORITY}",
			"target": "/tmp/.Xauthority",
			"type": "bind"
		}
	],
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"XAUTHORITY": "/tmp/.Xauthority"
	},
	"runArgs": [
		"--network",
		"host"
	],
	"postStartCommand": "sudo chmod -R o+rw /dev/bus/usb || true && if [ -f /opt/ros/jazzy/setup.zsh ] && ! grep -Fxq 'source /opt/ros/jazzy/setup.zsh' ~/.zshrc; then echo 'source /opt/ros/jazzy/setup.zsh' >> ~/.zshrc; fi && if [ -f /opt/ros/jazzy/setup.bash ] && ! grep -Fxq 'source /opt/ros/jazzy/setup.bash' ~/.bashrc; then echo 'source /opt/ros/jazzy/setup.bash' >> ~/.bashrc; fi",
	"customizations": {
		"vscode": {
			"extensions": [
				// C++ language support
				"llvm-vs-code-extensions.vscode-clangd",
				// Python language support
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.debugpy",
				// CMake language support
				"twxs.cmake",
				// Code spell checking
				"streetsidesoftware.code-spell-checker",
				// Git enhancements
				"mhutchie.git-graph"
			]
		}
	}
}
